{
	"name": "create-riot-app",
	"description": "RiotJS application",
	"version": "0.1.1",
	"author": "name <email@example.com>",
	"private": true,
	"homepage": "./",
	"browserslist": "> 0.25%, not dead",
	"__browserslist": "https://babeljs.io/docs/en/next/babel-preset-env.html",
	"meta": {
		"_": "It used for generate manifest.json in ./scripts/favicons.js",
		"start_url"      : "/",
		"appName"        : "RiotJS App",
		"appDescription" : "App description",
		"background"     : "#1c2026",
		"theme_color"    : "#1c2026",
		"display"        : "standalone",
		"orientation"    : "portrait"
	},
	"scripts": {
		"preinstall"      : "clear && echo '\n' && echo ' >> Install create-riot-app project ;)' && echo '\n\n' ",
		"postinstall"     : "npm i -g npx",
		"macos_fixes"     : "sudo ulimit -n 2200 && brew install watchman",
		
		"start"           : "node scripts/start.js",
		
		"lesslint"        : "lessc --lint src/view/styles/app.less ",
		"eslint_fix"      : "eslint --fix --ext=.js,.tag ./src",
		"eslint"          : "eslint --ext=.js,.tag ./src",
		"flow"            : "flow",
		"lint-staged"     : "npx lint-staged",

		"test"            : "node scripts/test.js --env=jsdom",
		"coverage"        : "npm test -- --coverage",
		
		"meta:generate"   : "cd ./scripts/tools/metainfo && npm i && npm start",
		"meta:clean"      : "rm -rf  ./public/static/meta",
		
		"build"           : "node scripts/build.js",
		"check_build"     : "npx serve -s build -p 9000",
		
		"predeploy"       : "npm run eslint && npm run lint-staged && npm run coverage",
		"deploy"          : "npm run deploy:ipfs",
		"deploy:ipfs"     : "cd ./scripts/tools/deploy_ipfs && npm run deploy",
		"deploy:firebase" : "cd ./scripts/tools/deploy_firebase && npm i && npm run deploy",
		"deploy:ssh"      : "cd ./scripts/tools/deploy_ssh && npm i && npm run deploy"
	},
	"pre-commit": [
		"lint-staged"
	],
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.tag": [
			"eslint"
		],
		"*.less": [
			"stylelint --syntax less",
			"lesslint"
		],
		"*.scss": [
			"stylelint --syntax scss"
		],
		"*.css": [
			"stylelint"
		]
	},
	"jest": {
		"moduleDirectories": [
			"node_modules",
			"src",
			"src/model"
		],
		"collectCoverageFrom": [
			"src/**/*.{js,tag}"
		],
		"setupFiles": [
			"<rootDir>/scripts/config/polyfills.js"
		],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.js?(x)",
			"<rootDir>/src/**/?(*.)(spec|test).js?(x)"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.tag$": "riot-jest-transformer",
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.css$": "<rootDir>/scripts/config/jest/cssTransform.js",
			"^(?!.*\\.(js|tag|css|json)$)": "<rootDir>/scripts/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
		]
	},
	"dependencies": {
		"hammerjs"   : "^2.0.8",
		"jquery"     : "^3.2.1",
		"riot"       : "^3.12.0",
		"riot-route" : "^3.1.3"
	},
	"__devDependencies": {
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-env": "^1.6.0",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
		"babel-runtime": "6.23.0",
		"babel-plugin-transform-runtime": "^6.22.0",
		"babel-register": "^6.22.0",
		"babel-preset-es2015-riot": "^1.1.0",
		"_": "_"
	},
	"devDependencies": {
		"@babel/core"                         : "^7.0.0",
		"@babel/polyfill"                     : "^7.0.0",
		"babel-preset-env"                    : "^1.7.0",
		"babel-eslint"                        : "^6.1.2",
		"babel-loader"                        : "7.1.5",
		"babel-jest"                          : "20.0.3",
		"autoprefixer"                        : "7.1.1",
		"case-sensitive-paths-webpack-plugin" : "2.1.1",
		"chalk"                               : "2.1.0",
		"css-loader"                          : "^0.28.4",
		"dotenv"                              : "6.0.0",
		"eslint"                              : "4.1.1",
		"eslint-loader"                       : "1.9.0",
		"eslint-plugin-flowtype"              : "2.34.1",
		"eslint-plugin-import"                : "2.6.1",
		"eslint-plugin-jsx-a11y"              : "6.0.2",
		"eslint-plugin-riot"                  : "^0.1.8",
		"extract-text-webpack-plugin"         : "3.0.2",
		"file-loader"                         : "1.1.11",
		"fs-extra"                            : "3.0.1",
		"html-webpack-plugin"                 : "2.28.0",
		"jest"                                : "20.0.4",
		"less"                                : "^3.8.1",
		"less-loader"                         : "^4.0.4",
		"object-assign"                       : "4.1.1",
		"postcss-flexbugs-fixes"              : "3.0.0",
		"postcss-loader"                      : "2.0.6",
		"pre-commit"                          : "^1.2.2",
		"promise"                             : "8.0.0",
		"react-dev-utils"                     : "^3.0.2",
		"riot-hot-reload"                     : "^1.0.0",
		"riot-jest-transformer"               : "^1.0.10",
		"riot-tag-loader"                     : "^1.0.0",
		"style-loader"                        : "^0.18.1",
		"stylelint"                           : "^7.12.0",
		"svg-inline-loader"                   : "^0.7.1",
		"url-loader"                          : "1.0.1",
		"webpack"                             : "3.12.0",
		"webpack-dev-server"                  : "^2.11.2",
		"webpack-manifest-plugin"             : "2.0.3",
		"serviceworker-webpack-plugin"        : "0.2.3",
		"whatwg-fetch"                        : "2.0.4"
	}
}
