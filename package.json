{
	"name"        : "create-riot-app"          ,
	"description" : "RiotJS application"       ,
	"version"     : "0.1.1"                    ,
	"author"      : "name <email@example.com>" ,
	"private"     : true                       ,

	"homepage": "./",

	"meta": { "_": "It used for generate manifest.json in ./scripts/favicons.js",

		"start_url"      : "/"               ,
		"appName"        : "RiotJS App"      ,
		"appDescription" : "App description" ,
		"background"     : "#1c2026"         ,
		"theme_color"    : "#1c2026"         ,
		"display"        : "standalone"      ,
		"orientation"    : "portrait"
	},

	"scripts"     : {
		"postinstall" : "npm run favicons && npm run build" ,

		"start"       : "node scripts/start.js"             ,

		"favicons"    : "node scripts/favicons.js"          ,

		"lesslint"    : "lessc --lint src/view/styles/app.less " ,
		"eslint_fix"  : "eslint --fix --ext=.js,.tag ./src"      ,
		"eslint"      : "eslint --ext=.js,.tag ./src"            ,
		"test"        : "node scripts/test.js --env=jsdom"       ,
		"coverage"    : "npm test -- --coverage"                 ,
		"flow"        : "flow"        ,
		"lint-staged" : "lint-staged" ,

		"build"       : "node scripts/build.js"  ,
		"check_build" : "serve -s build -p 9000" ,

		"predeploy"   : "npm run build",
		"deploy"      : "firebase deploy"
	},

	"pre-commit": [
		"lint-staged"
	],

	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.tag": [
			"eslint"
		],
		"*.less": [
			"stylelint --syntax less",
			"lesslint"
		],
		"*.scss": [
			"stylelint --syntax scss"
		],
		"*.css": [
			"stylelint"
		]
	},

	"jest": {
		"moduleDirectories": [
			"node_modules",
			"src",
			"src/model"
		],

		"collectCoverageFrom": [
			"src/**/*.{js,tag}"
		],
		"setupFiles": [
			"<rootDir>/scripts/config/polyfills.js"
		],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.js?(x)",
			"<rootDir>/src/**/?(*.)(spec|test).js?(x)"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.tag$" : "riot-jest-transformer"                         ,
			"^.+\\.js$"  : "<rootDir>/node_modules/babel-jest"             ,
			"^.+\\.css$" : "<rootDir>/scripts/config/jest/cssTransform.js" ,

			"^(?!.*\\.(js|tag|css|json)$)" : "<rootDir>/scripts/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
		]
	},

	"dependencies": {
		"hammerjs"   : "^2.0.8" ,
		"jquery"     : "^3.2.1" ,
		"riot"       : "^3.6.1" ,
		"riot-route" : "^3.1.1"
	},

	"devDependencies": {
		"autoprefixer"                                   : "7.1.1"   ,
		"babel-polyfill"                                 : "^6.23.0" ,
		"babel-core"                                     : "6.25.0"  ,
		"babel-eslint"                                   : "7.2.3"   ,
		"babel-jest"                                     : "20.0.3"  ,
		"babel-loader"                                   : "7.1.1"   ,
		"babel-plugin-transform-es2015-modules-commonjs" : "^6.24.1" ,
		"babel-preset-env"                               : "^1.6.0"  ,
		"babel-preset-es2015"                            : "^6.24.1" ,
		"babel-preset-es2015-riot"                       : "^1.1.0"  ,
		"babel-runtime"                                  : "6.23.0"  ,
		"case-sensitive-paths-webpack-plugin"            : "2.1.1"   ,
		"chalk"                                          : "2.0.1"   ,
		"css-loader"                                     : "^0.28.4" ,
		"dotenv"                                         : "4.0.0"   ,
		"eslint"                                         : "4.1.1"   ,
		"eslint-loader"                                  : "1.9.0"   ,
		"eslint-plugin-flowtype"                         : "2.34.1"  ,
		"eslint-plugin-import"                           : "2.6.1"   ,
		"eslint-plugin-jsx-a11y"                         : "6.0.2"   ,
		"eslint-plugin-riot"                             : "^0.1.7"  ,
		"extract-text-webpack-plugin"                    : "2.1.2"   ,
		"favicons"                                       : "^4.8.6"  ,
		"file-loader"                                    : "0.11.2"  ,
		"fs-extra"                                       : "3.0.1"   ,
		"html-webpack-plugin"                            : "2.29.0"  ,
		"jest"                                           : "20.0.4"  ,
		"less"                                           : "^2.7.2"  ,
		"less-loader"                                    : "^4.0.4"  ,
		"lint-staged"                                    : "^4.0.0"  ,
		"object-assign"                                  : "4.1.1"   ,
		"postcss-flexbugs-fixes"                         : "3.0.0"   ,
		"postcss-loader"                                 : "2.0.6"   ,
		"pre-commit"                                     : "^1.2.2"  ,
		"promise"                                        : "8.0.0"   ,
		"react-dev-utils"                                : "^3.0.2"  ,
		"riot-hot-reload"                                : "^1.0.0"  ,
		"riot-jest-transformer"                          : "^1.0.10" ,
		"riot-tag-loader"                                : "^1.0.0"  ,
		"serve"                                          : "^6.0.0"  ,
		"style-loader"                                   : "^0.18.1" ,
		"stylelint"                                      : "^7.12.0" ,
		"svg-inline-loader"                              : "^0.7.1"  ,
		"sw-precache-webpack-plugin"                     : "0.11.3"  ,
		"url-loader"                                     : "0.5.9"   ,
		"webpack"                                        : "^3.0.0"  ,
		"webpack-dev-server"                             : "^2.5.0"  ,
		"webpack-manifest-plugin"                        : "1.1.0"   ,
		"whatwg-fetch"                                   : "2.0.3"   ,

		"html-critical-webpack-plugin"  : "github:anthonygore/html-critical-webpack-plugin"
	}
}
